#!/usr/bin/env ruby

# Use the skynet_console to do common skynet_tasks.  See skynet_console_helper[link:files/lib/skynet/skynet_console_helper_rb.html] for commands.
#
# Usage: skynet_console [options]
#        --irb=[irb]                  Invoke a different irb.
#    -r, --required LIBRARY           Require the specified libraries. To include multiple libraries, include multiple -r options. ie. -r skynet -r fileutils


require 'rubygems'
require File.expand_path(File.dirname(__FILE__)) + '/../lib/skynet.rb'

Skynet::CONFIG[:LAUNCHER_PATH]          = File.expand_path(__FILE__)
Skynet::CONFIG[:SKYNET_LOG_LEVEL]       = Logger::ERROR

Skynet::Console.start
